extends /layout/web
include /utils/mixin

block styles
    +link("/static/dist/css/home.css")

block scripts
    +script("/static/dist/js/home.js")

block body
    .container
        //- 轮播
        .carousel.slide(data-ride="carousel", id="carouselExampleIndicators")
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="d-block w-100" src="https://iph.href.lu/500x300" alt="First slide">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="https://iph.href.lu/500x301" alt="Second slide">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="https://iph.href.lu/500x302" alt="Third slide">
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        
        //- 表格
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                <th class="home" scope="col">#</th>
                <th scope="col">First</th>
                <th scope="col">Last</th>
                <th scope="col">Handle</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                <th scope="row">1</th>
                <td>Mark</td>
                <td>Otto</td>
                <td>@mdo</td>
                </tr>
                <tr>
                <th scope="row">2</th>
                <td>Jacob</td>
                <td>Thornton</td>
                <td>@fat</td>
                </tr>
                <tr>
                <th scope="row">3</th>
                <td>Larry</td>
                <td>the Bird</td>
                <td>@twitter</td>
                </tr>
            </tbody>
        </table>

